@model MusicDictionary.Models.Music

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add New Artist</h1>
<br />

<form asp-action="Create" method="post">
    <div class="Container">
        <!-- builtin validation-->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <!-- automatically get the title from the model-->
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" class="form-control" />
                </div>
                <!-- executing builtin validation error message-->
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Genre"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Genre" class="form-control" />
                </div>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="SubGenre"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="SubGenre" class="form-control" />
                </div>
                <span asp-validation-for="SubGenre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Country"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Country" class="form-control" />
                </div>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="City"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="City" class="form-control" />
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="Music" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

